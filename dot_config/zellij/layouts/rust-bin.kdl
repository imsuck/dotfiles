layout {
	default_tab_template {
		children
		pane size=1 borderless=true {
			plugin location="zjstatus"
		}
	}
    tab {
        pane split_direction="vertical" {
            pane focus=true command="$EDITOR" size="65%" {
                args "."
            }
            pane split_direction="horizontal" {
                pane
                pane command="bacon" {
                    args "clippy"
                }
            }
        }
    }
}
