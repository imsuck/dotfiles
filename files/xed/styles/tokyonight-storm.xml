<style-scheme id="tokyonight-storm" _name="Tokyonight Storm" version="1.0">
  <author>?</author>
  <_description>A clean, dark theme that celebrates the lights of Downtown Tokyo at night.</_description>

  <!-- Colors -->
  <color name="bg"                          value="#24283b"/>
  <color name="fg"                          value="#c0caf5"/>
  <color name="select_bg"                   value="#364a82"/>

  <color name="black"                       value="#1d202f"/>
  <color name="red"                         value="#f7768e"/>
  <color name="green"                       value="#9ece6a"/>
  <color name="yellow"                      value="#e0af68"/>
  <color name="blue"                        value="#7aa2f7"/>
  <color name="magenta"                     value="#bb9af7"/>
  <color name="cyan"                        value="#7dcfff"/>
  <color name="light_grey"                  value="#a9b1d6"/>
  <color name="dark_grey"                   value="#414868"/>


  <!-- Global Settings -->

  <style name="text"                        foreground="fg" background="bg"/>
  <style name="selection"                   foreground="fg" background="select_bg"/>
  <style name="cursor"                      foreground="fg"/>
  <style name="current-line"                background="dark_grey"/>
  <style name="line-numbers"                foreground="fg" background="black"/>
  <style name="draw-spaces"                 foreground="dark_grey"/>
  <!-- ><style name="right-margin"                foreground="black" background="dark_grey"/> -->
  <!-- <style name="background-pattern"          background="dark_medium_blue_blend"/> -->

  <!-- Bracket Matching -->
  <style name="bracket-match"               foreground="yellow"/>
  <style name="bracket-mismatch"            foreground="red"/>

  <!-- Search Matching -->
  <style name="search-match"                foreground="fg" background="dark_grey"/>

  <!-- Bookmarks FIXME -->
  <style name="bookmark"                    background="white"/>

  <!-- Comments -->
  <style name="def:comment"                 foreground="light_grey"/>
  <style name="def:shebang"                 foreground="light_grey" italic="true"/>
  <style name="def:doc-comment-element"     bold="true"/>

  <!-- Constants and Variables-->
  <style name="def:constant"                foreground="yellow"/>
  <style name="def:string"                  foreground="green"/>
  <style name="def:special-char"            foreground="yellow"/>
  <style name="def:special-constant"        foreground="yellow"/>
  <style name="def:number"                  foreground="yellow"/>
  <style name="def:floating-point"          foreground="yellow"/>
  <style name="def:keyword"                 foreground="magenta"/>
  <style name="def:builtin"                 foreground="magenta"/>
  <style name="def:variable"                foreground="red"/>

  <!-- Identifiers -->
  <style name="def:identifier"              foreground="green"/>
  <style name="def:function"                foreground="blue"/>

  <!-- Statements -->
  <style name="def:statement"               foreground="black"/>

  <!-- Types -->
  <style name="def:type"                    foreground="yellow"/>

  <!-- Others -->
  <style name="def:error"                   foreground="red" underline="curly"/>
  <style name="def:warning"                 foreground="yellow"/>
  <style name="def:note"                    foreground="dark_grey"/>
  <style name="def:net-address-in-comment"  foreground="cyan" underline="single"/>
  <style name="def:preprocessor"            foreground="magenta"/>

  <!-- Heading styles, uncomment to enable -->
  <!--
  <style name="def:heading0"                scale="5.0"/>
  <style name="def:heading1"                scale="2.5"/>
  <style name="def:heading2"                scale="2.0"/>
  <style name="def:heading3"                scale="1.7"/>
  <style name="def:heading4"                scale="1.5"/>
  <style name="def:heading5"                scale="1.3"/>
  <style name="def:heading6"                scale="1.2"/>
  -->

  <!-- Unknown? -->
  <style name="def:specials"                foreground="white" background="neon_pink"/>
  <style name="def:boolean"                 foreground="nail_polish_pink"/>

  <!-- C Styles -->
  <style name="c:preprocessor"              foreground="magenta"/>
  <style name="c:included-file"             foreground="green"/>
  <style name="c:common-defines"            foreground="red"/>

  <!-- Diff Styles -->
  <style name="diff:ignore"                 foreground="dark_grey"/>
  <style name="diff:added-line"             foreground="green"/>
  <style name="diff:removed-line"           foreground="red"/>
  <style name="diff:changed-line"           foreground="yellow"/>
  <style name="diff:diff-file"              foreground="blue" bold="true"/>
  <style name="diff:location"               foreground="blue"/>
  <!-- <style name="diff:special-case"           foreground="idk" bold="true"/> -->

  <!-- Ruby Styles -->
  <!--
  <style name="ruby:module-handler"         foreground="teal_blue"/>
  <style name="ruby:symbol"                 foreground="nail_polish_pink"/>
  <style name="ruby:regex"                  foreground="teal_blue"/>
  -->

  <!-- SH Styles -->
  <style name="sh:function"                 foreground="blue"/>

  <!-- XML Styles -->
  <style name="xml:attribute-name"          foreground="yellow"/>
  <style name="xml:element-name"            foreground="fg"/>
  <style name="xml:entity"                  foreground="blue"/>
  <!-- <style name="xml:processing-instruction"  bold="true"/> -->

</style-scheme>
